<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs') %>

    <body class="bg-gradient-primary-to-secondary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container-xl px-4">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <!-- Basic registration form-->
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header justify-content-center">
                                        <h3 class="fw-light my-4">Add Microcontroller</h3>
                                    </div>
                                    <div class="card-body">
                                        <!-- Registration form-->
                                        <form action="/insert" method="post">
                                            <!-- Form Row-->
                                            <!-- Form Group (email address)            -->
                                            <div class="mb-3">
                                                <label class="small mb-1"
                                                    for="inputMicrocontroller">NameMicrocontroller</label>
                                                <input class="form-control" id="inputMicrocontroller" type="text"
                                                    name="namemicrocontroller" placeholder="Enter microcontroller" />
                                            </div>
                                            <!-- Form Row-->
                                            <div class="row gx-3">
                                                <div class="col-md-6">
                                                    <!-- Form Group (name sensor 1)-->
                                                    <div class="mb-3">
                                                        <label class="small mb-1" for="inputSensorone">NameSensor
                                                            1</label>
                                                        <input class="form-control" id="inputSensorone" type="text"
                                                            name="namesensorone" placeholder="Enter sensor 1" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <!-- Form Group (name sensor 2)-->
                                                    <div class="mb-3">
                                                        <label class="small mb-1" for="namesensortwo">NameSensor
                                                            2</label>
                                                        <input class="form-control" id="inamesensortwo" type="text"
                                                            name="namesensortwo" placeholder="Enter sensor 2" />
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Form Group (create Microcontroller)-->
                                            <button class="btn btn-primary btn-block" type="submit">Create
                                                Microcontroller</button>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="small"><a href="/index">Back Index</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <%- include('footer.ejs') %>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>

</html>